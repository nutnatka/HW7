<p id="notice"><%= notice %></p>

<p>
  <strong>Name:</strong>
  <%= @post.name %>
</p>

<p>
  <strong>Title:</strong>
  <%= @post.title %>
</p>

<p>
  <strong>Content:</strong>
  <%= @post.content %>
</p>

<p>
  <strong>Author:</strong>
  <%= @post.author_id %>
</p>

<p>
  <strong>Image:</strong>
  <div class="col-4">
    <img class="card-img-top" src="<%= @post.image %>" alt="Card image cap">
  </div>
</p>

<% @comments.each do |comments| %>
  <div class="card" style="width: 18rem;">
    <p><%= comments.body %>"</p>
    </div>
  </div>
<% end %>

  <% def url = "/posts/#{@post.id}/comments" %>
  <%= form_with(model: @comment, url: url) do |form| %>
    <div class="field col-12">
      <div class="row">
        <div class="col-12">
          <%= form.label :'Comment' %>
        </div>
        <div class="col-4">
          <%= form.text_area :body %>
        </div>
        <div class="col-12">
          <%= form.check_box :status %>
        </div>
        <div class="col-12">
          <%= form.number_field :author_id, :value => @post.author_id, :type => 'hidden' %>
          <%= form.number_field :post_id, :value => @post.id, :type => 'hidden' %>
        </div>
      </div>
    </div>

    <div class="actions" class="col-3">
      <%= form.submit %>
    </div>
  <% end %>

<%= link_to 'Edit', edit_post_path(@post) %> |
<%= link_to 'Back', posts_path %>

<%= render 'sessions/modal' if show_login_modal? %>