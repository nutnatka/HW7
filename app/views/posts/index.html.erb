<p id="notice"><%= notice %></p>

<h1>Posts</h1>
<div class="container">
  <div class="row">
    <% @posts.each do |post| %>
      <div class="card" style="width: 18rem;">
        <img src="<%= post.image %>" alt="<%= post.title %>">
        <div class="card-body">
          <h5 class="card-title"><%= post.name %></h5>
          <h3 class="card-title" title="<%= post.title %>"><%= post.title %></h3>
          <p class="card-text"><%= post.content %></p>
          <div><%= link_to 'Show', post %></div>
          <div><%= link_to 'Edit', edit_post_path(post) %></div>
          <div><%= link_to 'Destroy', post, method: :delete, data: { confirm: 'Are you sure?' } %></div>
        </div>
      </div>
    <% end %>
  </div>
</div>

<div class="dropdown">
  <button class="btn btn-secondary dropdown-toggle" type="button" id="dropdownMenu2" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
    Dropdown
  </button>
  <div class="dropdown-menu" aria-labelledby="dropdownMenu2">
    <button class="dropdown-author" type="button">Action</button>
    <button class="dropdown-author type="button">Another action</button>
    <button class="dropdown-author" type="button">Something else here</button>
  </div>
</div>

<br>

